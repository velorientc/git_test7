<?xml version="1.0" encoding="utf-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">

    <?define hg_po_langs = da;de;el;fr;it;ja;pt_BR;sv;zh_CN;zh_TW ?>

    <Fragment>
        <DirectoryRef Id="INSTALLDIR">
            <Directory Id="i18ndir" Name="i18n">
                <Component Id="i18nFolder" Guid="{3115A038-CA56-4413-97C1-6F0070D6034C}">
                    <File Source="$(var.SourceDir)\hggettext" KeyPath="yes" />
                    <?foreach LANG in $(var.hg_po_langs) ?>
                        <File Id="hg.$(var.LANG).po" Source="$(var.SourceDir)\$(var.LANG).po" />
                    <?endforeach?>
                </Component>
            </Directory>
        </DirectoryRef>
    </Fragment>

</Wix>
